{
    "name": "justbetter/statamic-glide-directive",
    "description": "Addon that adds a glide blade directive",
    "type": "package",
    "require": {
        "php": "^8.3",
        "statamic/cms": "^5.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.4",
        "laravel/pint": "^1.22",
        "orchestra/testbench": "^10.3",
        "pestphp/pest": "^3.7",
        "phpstan/phpstan-mockery": "^2.0",
        "phpunit/phpunit": "^11.5"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\GlideDirective\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBetter\\GlideDirective\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Glide blade directive",
            "description": "Addon that adds a Glide blade directive"
        },
        "laravel": {
            "providers": [
                "JustBetter\\GlideDirective\\ServiceProvider"
            ]
        }
    },
    "authors": [
        {
            "name": "Bob",
            "email": "bob@justbetter.nl",
            "role": "Developer"
        },
        {
            "name": "Kevin Meijer",
            "email": "kevin@justbetter.nl",
            "role": "Developer"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan --memory-limit=1G",
        "style": "pint --test",
        "coverage": "XDEBUG_MODE=coverage php vendor/bin/pest --coverage --min=85",
        "quality": [
            "@test",
            "@analyse",
            "@style"
        ],
        "fix-style": "pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
